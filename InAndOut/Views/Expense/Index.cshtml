@model IEnumerable<Expense>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Borrowed Items List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Expense" asp-action="Create" class="btn btn-primary">Create new Item</a>
        </div>
    </div>
    <br />


    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Expense Name
                    </th>
                    <th>
                        Amount
                    </th>
                    <th>
                        Update/Delete
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Expense in Model)
                {
                <tr>
                    <td width="30%">@Expense.ExpenseName</td>
                    <td width="30%">@Expense.Amount</td>
                    <td width="40"><a asp-controller="Expense" asp-action="Update" asp-route-Id="@Expense.Id" class="btn btn-primary m-1">Update</a>
                                   <a asp-controller="Expense" asp-action="Delete" asp-route-Id="@Expense.Id" class="btn btn-danger m-1">Delete</a></td>
                </tr>
                }
            </tbody>

        </table>
    }
    else
    {
        <p>No Expense created yet</p>
    }

</div>

