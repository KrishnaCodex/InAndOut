@model IEnumerable<ExpenseType>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Expense Types List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="ExpenseType" asp-action="Create" class="btn btn-primary">Create new Item</a>
        </div>
    </div>
    <br />


    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Expense Type
                    </th>
                    <th>
                        Update/Delete
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ExpenseType in Model)
                {
                <tr>
                    <td width="30%">@ExpenseType.Name</td>
                    <td width="40"><a asp-controller="ExpenseType" asp-action="Update" asp-route-Id="@ExpenseType.Id" class="btn btn-primary m-1">Update</a>
                                   <a asp-controller="ExpenseType" asp-action="Delete" asp-route-Id="@ExpenseType.Id" class="btn btn-danger m-1">Delete</a></td>
                </tr>
                }
            </tbody>

        </table>
    }
    else
    {
        <p>No Expense Type created yet</p>
    }

</div>

